                                        </ul>
                                    </div>
                                </div>
                                <div class="d-sm-none xs-category-icon-link">
                                    <a href="{{ url(channel.getRoute|replace({'_category' : ''})) }}">
                                        <img src="{{ asset('assets/images/arrow-down.png') }}">
                                    </a>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
