                                                    {% set route = "sales_category" %}
                                                    <li class="xs-half xs-category-item">
                                                        <a href="{{ url(channel.getRoute, {category : category.getTitleSlug}) }}"
                                                           class="text-dark">{{ category.getTitle }}</a></li>
