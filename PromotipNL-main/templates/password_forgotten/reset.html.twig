{% extends 'base.html.twig' %}

{% block title %}{% trans %}Set password{% endtrans %}{% endblock %}

{% block body %}
    {{ form_start(form, {'attr': {'class': 'form-card'}}) }}
    <div class="text-center mb-4">
        <h1 class="h3 mb-3 font-weight-normal">{% trans %}Set password{% endtrans %}</h1>
    </div>

    {# read and display several types of flash messages #}
    {% for label, messages in app.flashes(['success', 'warning', 'error']) %}
        {% for message in messages %}
            <div class="alert alert-{{ label }}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}

    {% for passwordField in form.password %}
        <div class="form-label-group">
            {{ form_widget(passwordField, { 'attr': {'class': 'form-control form-control-lg', 'placeholder': 'Password'|trans} }) }}
            {{ form_label(passwordField) }}
        </div>
    {% endfor %}



    {{ form_widget(form.save, {'label': 'Reset password'|trans, 'attr': {'class': 'btn btn-lg btn-primary btn-block' }}) }}

    {{ form_end(form) }}

{% endblock %}
