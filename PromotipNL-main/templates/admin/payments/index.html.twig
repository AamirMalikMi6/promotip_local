{% extends 'base.html.twig' %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}

{% block title %}Betalingen{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-3">
                <h1>Betalingen</h1>
            </div>
            <div class="col-9 float-right">
                <div class="form-order-selects">
                    <form method="post">
                        <div class="filters-field">
                            <strong>Datum:</strong>
                            <select name="date_payment" class="form-control form-control-lg form-control">
                                <option value="all">All dates</option>
                                {% for index,date in dates %}
                                    <option value="{{ index }}" {% if index == date_filter %} selected {% endif %}>{{ date }}</option>
                                {% endfor %}
                            </select>
                        </div>
                        <div class="filters-field">
                            <strong>Event:</strong>
                            <select name="advert" class="form-control form-control-lg form-control">
                                <option value="all">All events</option>
                                {% for id,title in events %}
                                    <option value="{{ id }}" {% if id == advert_filter %} selected {% endif %}>{{ title }}</option>
                                {% endfor %}
                            </select>
                        </div>
                        <button type="submit" class="btn btn-primary btn">Filter</button>
                    </form>
                </div>
            </div>
        </div>
        <div class="row">
            {% if payments is not empty %}
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                        <tr>
                            <th>User</th>
                            <th>Advert</th>
                            <th>Payment method</th>
                            <th>Amount</th>
                            <th>Date</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for payment in payments %}
                            <tr>
                                <td>{{ payment.getUser().getFirstname() }} {{ payment.getUser().getSurname() }}</td>
                                <td>{{ payment.getEventAdvert().getTitle() }}</td>
                                <td>{{ payment.getPaymentMethod() }}</td>
                                <td>{{ payment.getAmount() }}</td>
                                <td>{{ payment.getDatePayment()|date('Y-m-d') }}</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% else %}
                Geen verrichtingen voor deze filters
            {% endif %}
        </div>
    </div>
{% endblock %}
