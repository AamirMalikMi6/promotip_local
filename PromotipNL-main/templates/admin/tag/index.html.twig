{% extends 'base.html.twig' %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}

{% block title %}Tags{% endblock %}

{% block body %}
    <div class="container">
        <h1>{% trans %}Tags{% endtrans %}</h1>
        {{ form(form) }}

        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                <tr>
                    <th>{% trans %}Tag{% endtrans %}</th>
                    <th>&nbsp;</th>
                </tr>
                </thead>
                <tbody>
                {% for t in tags %}
                    <tr>
                        <td>{{ t.getName }}</td>
                        <td class="align-right">
                            <a href="?ac=edit&amp;id={{ t.getId }}" class="btn btn-sm btn-primary"><i class="fa fa-pen"></i></a>
                            <a href="?ac=del&amp;id={{ t.getId }}" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure?');"><i class="fa fa-trash"></i></a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
